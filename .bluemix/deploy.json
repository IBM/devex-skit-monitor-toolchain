{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apikeyDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "api-key"
            }
        },
        "enable-cf": {
            "description": {
                "$ref": "#/messages/deploy.enableCfDescription"
            },
            "type": "boolean",
            "default": true
        },
        "enable-helm": {
            "description": {
                "$ref": "#/messages/deploy.enableHelmDescription"
            },
            "type": "boolean",
            "default": true
        },
        "enable-knative": {
            "description": {
                "$ref": "#/messages/deploy.enableKnativeDescription"
            },
            "type": "boolean",
            "default": true
        },
        "registry-region": {
            "description": {
                "$ref": "#/messages/deploy.registryRegionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "registry-namespace": {
            "description": {
                "$ref": "#/messages/deploy.registrynsDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9][-_a-z0-9]{2,28}[a-z0-9]$",
            "validator": {
                "v-type": "k8s-registry-namespace",
                "params": ["registry-region"],
                "validate": false
            }
        },
        "prod-region": {
            "description": {
                "$ref": "#/messages/deploy.regionDescription"
            },
            "type": "string",
            "disabled": false,
            "validator": {
                "v-type": "k8s-region",
                "params": ["api-key"]
            }
        },
        "prod-resource-group": {
            "description": {
                "$ref": "#/messages/deploy.rgDescription"
            },
            "type": "string",
            "validator": {
                "v-type": "resource-group",
                "params": ["api-key"]
            }
        },
        "prod-cluster-name": {
            "description": {
                "$ref": "#/messages/deploy.clusterNameDescription"
            },
            "type": "string",
            "pattern": "\\S",
            "validator": {
                "v-type": "k8s-cluster-name",
                "params": ["prod-region", "prod-resource-group"]
            }
        },
        "prod-cluster-namespace": {
            "description": {
                "$ref": "#/messages/deploy.namespaceDescription"
            },
            "type": "string",
            "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "prod-organization": {
            "description": {
                "$ref": "#/messages/deploy.organizationDescription"
            },
            "type": "string"
        },
        "prod-space": {
            "description": {
                "$ref": "#/messages/deploy.spaceDescription"
            },
            "type": "string"
        },
        "slack-webhook-url": {
            "description": {
                "$ref": "#/messages/verify.slackWebhookURLDescription"
            },
            "type": "string"
        },
        "slack-owners-channel": {
            "description": {
                "$ref": "#/messages/verify.slackOwnersChannelDescription"
            },
            "type": "string"
        },
        "pagerduty-api-token": {
            "description": {
                "$ref": "#/messages/verify.pagerDutyAPITokenDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": ["api-key", "registry-region", "registry-namespace", "prod-region", "prod-resource-group", "prod-cluster-name", "prod-cluster-namespace", 
                "prod-organization", "prod-space",
                "enable-cf", "enable-helm", "enable-knative", "slack-webhook-url", "slack-owners-channel", "pagerduty-api-token"],
    "form": [
        {
            "type": "validator",
            "url": "/devops/validator/validator-v1.html"
        },
        {
            "type": "boolean",
            "readonly": false,
            "default": true,
            "title": {
                "$ref": "#/messages/deploy.enableCfTitle"
            },
            "key": "enable-cf"
        },
        {
            "type": "boolean",
            "readonly": false,
            "default": true,
            "title": {
                "$ref": "#/messages/deploy.enableHelmTitle"
            },
            "key": "enable-helm"
        },
        {
            "type": "boolean",
            "readonly": false,
            "default": true,
            "title": {
                "$ref": "#/messages/deploy.enableKnativeTitle"
            },
            "key": "enable-knative"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.apikey"
            },
            "key": "api-key"
        },
        {
            "type": "string",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.slackWebhookURLTitle"
            },
            "key": "slack-webhook-url"
        },
        {
            "type": "string",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.slackOwnersChannelTitle"
            },
            "key": "slack-owners-channel"
        },
        {
            "type": "password",
            "readonly": false,
            "title": {
                "$ref": "#/messages/verify.pagerDutyAPITokenTitle"
            },
            "key": "pagerduty-api-token"
        },
        {
            "type": "table",
            "columnCount": 3,
            "widths": ["50%", "3%", "47%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregRegion"
                }
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.containerregns"
                }
            }, {
                "type": "select",
                "title": {
                    "$ref": "#/messages/deploy.imgregRegion"
                },
                "key": "registry-region"
            }, {
                "type": "label",
                "title": ""
            }, {
                "type": "select",
                "readonly": false,
                "title": {
                    "$ref": "#/messages/deploy.imgregNs"
                },
                "key": "registry-namespace"
            }]
        },
        {
            "type": "label",
            "title": {
                "$ref": "#/messages/kubeEnv"
            }
        },
        {
            "type": "table",
            "columnCount": 7,
            "widths": ["24%", "2%", "24%", "3%", "23%", "1%", "23%"],
            "items": [{
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.rg"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.cluster"
                    }
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/deploy.clusterNs"
                    }
                }, {
                    "type": "select",
                    "key": "prod-region"
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "prod-resource-group",
                    "readonly": false
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "select",
                    "key": "prod-cluster-name",
                    "readonly": false
                }, {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "text",
                    "key": "prod-cluster-namespace",
                    "readonly": false
                }
            ]
        }, {
            "type": "table",
            "columnCount": 1,
            "widths": ["100%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusterDescription"
                }
            }]
        }, {
            "type": "table",
            "columnCount": 1,
            "widths": ["100%"],
            "items": [{
                "type": "label",
                "title": {
                    "$ref": "#/messages/deploy.clusternsDescription"
                }
            }]
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
                "28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/cloudFoundryEnv"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region"
                },
                {
                    "type": "select",
                    "key": "prod-organization"
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false
                }
            ]
        }
    ]
}